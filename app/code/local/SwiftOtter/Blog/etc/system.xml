<?xml version="1.0"?>
<config>
    <sections>
        <swiftotter_config>
            <groups>
                <blog translate="label">
                    <label>Blog</label>
                    <sort_order>450</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <endpoint_url translate="label">
                            <label>Endpoint URL</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </endpoint_url>
                        <sidebar_widget_id translate="label">
                            <label>Sidebar Widget ID</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </sidebar_widget_id>
                        <json_append_parameter translate="label">
                            <label>Json Request Parameter</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </json_append_parameter>
                        <google_api_url translate="label">
                            <label>Google API URL</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </google_api_url>
                        <google_api_secret translate="label">
                            <label>Google API Secret</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </google_api_secret>
                        <google_api_public translate="label">
                            <label>Google API Public Key</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>100</sort_order>
                        </google_api_public>
                        <enable_facebook translate="label">
                            <label>Enable Facebook Share</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>500</sort_order>
                        </enable_facebook>
                        <enable_twitter translate="label">
                            <label>Enable Twitter Share</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>500</sort_order>
                        </enable_twitter>
                        <enable_pinterest translate="label">
                            <label>Enable Pinterest Share</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>500</sort_order>
                        </enable_pinterest>
