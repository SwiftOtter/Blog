<?php $_post = $this->getPost(); ?>

<?php if ($this->helper('SwiftOtter_Blog')->getFacebook()): ?>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
