<?php endif; ?>

<?php if ($_post): ?>
    <meta property="og:title" content="<?php echo $_post->getTitle(); ?>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<?php echo $_post->getUrl(); ?>" />
    <meta property="og:site_name" content="<?php echo $this->__("Pleasant Hill Grain"); ?>" />

    <?php if ($_featuredImages = $_post->getThumbnailImages() && isset($_post->getThumbnailImages()['full']['url'])): ?>
        <meta property="og:image" content="<?php echo $_post->getThumbnailImages()['full']['url']; ?>" />
    <?php endif; ?>
<?php endif; ?>
