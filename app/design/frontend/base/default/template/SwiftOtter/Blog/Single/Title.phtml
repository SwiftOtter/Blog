$post = $this->getPost();
?>

<div class="post-title-block<?php if ($this->getFeatured()):?> post-title-featured<?php endif; ?>">
    <h2 class="post-title">
        <a href="<?php echo $post->getUrl(); ?>" class="post-title-link"><?php echo $post->getTitle(); ?></a>
    </h2>
