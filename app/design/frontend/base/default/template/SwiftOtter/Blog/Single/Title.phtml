        <span class="post-meta post-time">Posted: <?php echo date("n\\.j\\.y", strtotime($post->getDate())); ?></span>
        <a href="<?php echo $post->getCommentUrl(); ?>" class="post-comment-link post-top-link">
            <?php if ($post->getComments()): ?>
                <?php echo $this->__('Read'); ?> <?php echo $post->getNumberOfComments(); ?> <?php echo $this->__('Comment'); ?><?php if ($post->getNumberOfComments() > 1): ?>s<?php endif; ?>
            <?php else: ?>Add a comment<?php endif; ?>
        </a>
    </div>
</div>